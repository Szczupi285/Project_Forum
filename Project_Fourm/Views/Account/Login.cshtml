@model LoginModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_SidebarLayoutLoggedOutUser";


    <div class="main-login-container">
        <form asp-controller="Account" asp-action="Login" method="post">
            <h2 id="login-header">Sign in</h2>
            <div class="login-class">
                <div class="login-field">
                    <input type="text" placeholder="Username" asp-for="Username" />
                    <i></i>
                </div>
                <span asp-validation-for="Username" class="login-error-message"></span>
            </div>
            <div class="login-class" id="login-password">
                <div class="login-field">
                    <input type="password" placeholder="Password" asp-for="Password" />
                    <i></i>
                </div>
                <a id="forgot-passwd" href="#">Forgot password</a>
                <span asp-validation-for="Username" class="login-error-message"></span>
            </div>
            <input id="login-submit" type="submit" value="Login" />
        </form>
    </div>

   
}
